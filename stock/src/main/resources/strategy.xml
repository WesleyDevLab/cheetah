<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dayMACDBuyStrategy" class="com.zhaijiong.stock.strategy.buy.MACDBuyStrategy">
        <constructor-arg index="0" value="3"/>
        <constructor-arg index="1" value="DAY"/>
    </bean>

    <bean id="minute60BuyStrategy" class="com.zhaijiong.stock.strategy.buy.MACDBuyStrategy">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="SIXTY_MIN"/>
    </bean>

    <bean id="minute60SellStrategy" class="com.zhaijiong.stock.strategy.sell.MACDSellStrategy">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="SIXTY_MIN"/>
    </bean>

    <bean id="minute15BuyStrategy" class="com.zhaijiong.stock.strategy.buy.MACDBuyStrategy">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="FIFTEEN_MIN"/>
    </bean>

    <bean id="minute15SellStrategy" class="com.zhaijiong.stock.strategy.sell.MACDSellStrategy">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="FIFTEEN_MIN"/>
    </bean>

    <bean id="goldenSpiderBuyStrategy" class="com.zhaijiong.stock.strategy.buy.GoldenSpiderBuyStrategy">
        <constructor-arg value="3"/>
    </bean>

    <bean id="goldenSpiderSellStrategy" class="com.zhaijiong.stock.strategy.sell.GoldenSpiderSellStrategy">
        <constructor-arg value="3"/>
    </bean>

    <bean id="maBuyStrategy" class="com.zhaijiong.stock.strategy.buy.MABuyStrategy">
        <constructor-arg value="4"/>
        <constructor-arg value="close_ma5"/>
        <constructor-arg value="close_ma10"/>
        <constructor-arg value="SIXTY_MIN"/>
    </bean>
</beans>